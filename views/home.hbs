<script>
    var shareButton = document.querySelector('#sharebtn');
    shareButton.addEventListener('click', e => {
        e.preventDefault();
        if (navigator.share) {
            navigator.share({
                title: '{{{title}}}',
                url: window.location.href
            }).then(() => {
                console.log('شكرا على مشاركة الصفحة!');
            })
                .catch(console.error);
        } else {
            // fallback
        }
    });
</script>